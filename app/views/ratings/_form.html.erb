<%= simple_form_for [recipe, rating], data: {
    insert_ratings_target: "form",
    action: "submit->insert-ratings#send"
  } do |f| %>
  <%= f.input :comment, placeholder: "Add your rating here..." %>
  <%= f.input :rating, as: :select, collection: (1..5), required: true %>
  <%= f.submit class: "btn btn-yellow mt-2" %>
<% end %>
